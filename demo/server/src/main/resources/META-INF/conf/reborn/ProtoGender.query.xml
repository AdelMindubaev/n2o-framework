<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" name="${gender}">
    <list>
        <sql>select :select from pim_gender where :filters order by 1</sql>
    </list>
    <count>
        <sql>select count(*) from pim_gender where :filters</sql>
    </count>

    <fields>
        <field id="id" domain="integer" name="${id}">
            <select/>
            <filters>
                <eq filter-id="id">id=:id</eq>
            </filters>
        </field>
        <field id="name" domain="string" name="${naming}">
            <select/>
            <sorting/>
            <filters>
                <like filter-id="name">name like :name||'%'</like>
            </filters>
        </field>
    </fields>
</query>
