<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" route="/patient">
    <form query-id="ProtoPatient" name="Карточка пациента">
        <fields>
            <row>
                <input-text label="Фамилия" id="surname" required="true" placeholder="Введите значение"/>
                <input-text label="Имя" id="name" required="true">
                    <dependencies>
                        <fetch-value query-id="ProtoPatient" on="default">
                            <pre-filters>
                                <eq field-id="id" value="5607677"/>
                            </pre-filters>
                        </fetch-value>
                    </dependencies>
                </input-text>
                <input-text label="Отчество" id="patrName" default-value="Тест"/>
            </row>
            <row>
                <col size="5">
                    <radio-group id="gender" label="Пол" required="true"
                            query-id="ProtoGender" label-field-id="name"/>
                </col>
                <col size="5">
                    <date-time id="birthday" label="Дата рождения" date-format="DD.MM.YYYY"/>
                </col>
                <checkbox id="vip">
                </checkbox>
            </row>
            <row>
                <input-text id="default" label="Введите что-нибудь, чтобы загрузилось Имя по умолчанию" style="color: green;"/>
            </row>
        </fields>
    </form>
</simple-page>