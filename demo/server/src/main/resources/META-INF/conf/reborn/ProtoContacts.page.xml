<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="${contacts}">
    <regions>
        <region>
            <form query-id="ProtoContacts">
                <fields>
                    <hidden id="individualId" param="client_id"/>
                    <row>
                        <input-select id="type" label="${contact.type}" label-field-id="name">
                            <options>
                                <option id="2" name="${full.phone}"/>
                                <option id="4" name="${email}"/>
                                <option id="7" name="${fax}"/>
                            </options>
                        </input-select>
                        <col>
                            <masked-input mask="+7 (999) 999-99-99" id="phone" label="${phone}"
                                          placeholder="+7 (___) ___-__-__">
                                <dependencies>
                                    <visibility on="type">type.id == 2</visibility>
                                </dependencies>
                            </masked-input>
                            <input-text id="email" label="${email}">
                                <dependencies>
                                    <visibility on="type">type.id == 4</visibility>
                                </dependencies>
                            </input-text>
                        </col>
                    </row>
                    <input-text id="note" label="${note}">
                        <dependencies>
                            <enabling on="type">type.id == 2</enabling>
                        </dependencies>
                    </input-text>
                </fields>
            </form>
        </region>
    </regions>
</page>