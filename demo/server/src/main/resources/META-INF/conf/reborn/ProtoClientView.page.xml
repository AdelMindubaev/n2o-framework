<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0">
    <form query-id="ProtoClient" name="Просмотр клиента">
        <fields>
            <row>
                <input-text label="Фамилия" id="surname" required="true" placeholder="Введите значение" enabled="false"/>
                <input-text label="Имя" id="name" required="true"  enabled="false"/>
                <input-text label="Отчество" id="patrName" default-value="Тест" enabled="false"/>
            </row>
            <line>
                <row>
                    <col size="5">
                        <select id="gender" label="Пол" required="true"
                                query-id="ProtoGender" label-field-id="name" enabled="false"/>
                    </col>
                    <col size="5">
                        <date-time id="birthday" label="Дата рождения" enabled="false"/>
                    </col>
                    <checkbox id="vip" enabled="false">
                    </checkbox>
                </row>
            </line>
            <text-area id="note" label="Примечание" enabled="false"/>
        </fields>
    </form>
</simple-page>