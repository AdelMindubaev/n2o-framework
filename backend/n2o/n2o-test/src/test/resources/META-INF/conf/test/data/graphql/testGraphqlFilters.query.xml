<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">

    <list result-mapping="['data.persons']" filters="type, personName, age">
        <graphql>query persons(name: {{name}}, age: {{age}}) {id name age}</graphql>
    </list>

    <list result-mapping="['data.persons']">
        <graphql filter-separator=" AND ">query persons(filter: { {{filters}} }) {id name age}</graphql>
    </list>

    <fields>
        <field id="id">
            <select/>
        </field>

        <field id="personName">
            <select mapping="['name']"/>
            <filters>
                <eq filter-id="personName" mapping="['name']">{ name: {eq: {{name}} } }</eq>
            </filters>
        </field>

        <field id="age">
            <select/>
            <filters>
                <eq filter-id="age">{ age: {ge: {{age}} } }</eq>
            </filters>
        </field>

        <!-- just for different <list> call -->
        <field id="type">
            <select/>
            <filters>
                <eq filter-id="type"/>
            </filters>
        </field>
    </fields>
</query>
