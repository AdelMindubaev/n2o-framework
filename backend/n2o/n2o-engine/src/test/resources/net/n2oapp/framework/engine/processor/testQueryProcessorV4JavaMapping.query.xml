<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">
    <list count-mapping="count" result-mapping="#this" filters="firstArg, secondArg, thirdArg">
        <java class="net.n2oapp.framework.engine.processor.StaticInvocationTestClass"
              method="methodWithThreeArgument">
            <arguments>
                <argument name="first"/>
                <argument name="second"/>
                <argument name="third"/>
            </arguments>
        </java>
    </list>

    <fields>
        <field id="firstArg" domain="string">
            <select mapping="[first]"/>
            <filters>
                <eq filter-id="firstArg"/>
            </filters>
        </field>

        <field id="secondArg" domain="integer">
            <select mapping="[second]"/>
            <filters>
                <eq filter-id="secondArg"/>
            </filters>
        </field>

        <field id="thirdArg" domain="boolean">
            <select mapping="[third]"/>
            <filters>
                <eq filter-id="thirdArg"/>
            </filters>
        </field>
    </fields>
</query>
