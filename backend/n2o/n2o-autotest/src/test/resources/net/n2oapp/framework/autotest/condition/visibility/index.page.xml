<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
      name="VisibilityTestPage">
    <regions>
        <region>
            <form>
                <fields>
                    <radio-group id="fs1" label="Field Selector 1" inline="true">
                        <default-value id="1"/>
                        <options>
                            <option id="1" name="Show left field"/>
                            <option id="2" name="Show right field"/>
                        </options>
                    </radio-group>
                    <row>
                        <col>
                            <input-text id="Field L11">
                                <dependencies>
                                    <visibility on="fs1" apply-on-init="true">
                                        typeof(fs1)!=='undefined' &amp;&amp; fs1.id==1
                                    </visibility>
                                </dependencies>
                            </input-text>
                            <input-text id="Field L21">
                                <dependencies>
                                    <visibility on="fs1" apply-on-init="false">
                                        typeof(fs1)!=='undefined' &amp;&amp; fs1.id==1
                                    </visibility>
                                </dependencies>
                            </input-text>
                        </col>
                        <col>
                            <input-text id="Field R11">
                                <dependencies>
                                    <visibility on="fs1" apply-on-init="true">
                                        typeof(fs1)!=='undefined' &amp;&amp; fs1.id==2
                                    </visibility>
                                </dependencies>
                            </input-text>
                            <input-text id="Field R21">
                                <dependencies>
                                    <visibility on="fs1" apply-on-init="false">
                                        typeof(fs1)!=='undefined' &amp;&amp; fs1.id==2
                                    </visibility>
                                </dependencies>
                            </input-text>
                        </col>
                    </row>
                </fields>
            </form>
        </region>
        <region>
            <form>
                <fields>
                    <radio-group id="fs2" label="Field Selector 2" inline="true">
                        <options>
                            <option id="1" name="Show left field"/>
                            <option id="2" name="Show right field"/>
                        </options>
                    </radio-group>
                    <row>
                        <col>
                            <input-text id="Field L12">
                                <dependencies>
                                    <visibility on="fs2" apply-on-init="true">
                                        fs2.id==1
                                    </visibility>
                                </dependencies>
                            </input-text>
                            <input-text id="Field L22">
                                <dependencies>
                                    <visibility on="fs2" apply-on-init="false">
                                        fs2.id==1
                                    </visibility>
                                </dependencies>
                            </input-text>
                        </col>
                        <col>
                            <input-text id="Field R12">
                                <dependencies>
                                    <visibility on="fs2" apply-on-init="true">
                                        fs2.id==2
                                    </visibility>
                                </dependencies>
                            </input-text>
                            <input-text id="Field R22">
                                <dependencies>
                                    <visibility on="fs2" apply-on-init="false">
                                        fs2.id==2
                                    </visibility>
                                </dependencies>
                            </input-text>
                        </col>
                    </row>
                </fields>
            </form>
        </region>
        <region>
            <form>
                <fields>
                    <row>
                        <col size="6">
                            <select id="charactersNumber" label="Count" enabled="false">
                                <options>
                                    <option id="1" name="1"/>
                                    <option id="2" name="2"/>
                                </options>
                                <dependencies>
                                    <enabling on="qrCodeSetting">
                                        return !(typeof(qrCodeSetting) != 'undefined' &amp;&amp; qrCodeSetting != null
                                        &amp;&amp; qrCodeSetting.id == 1)
                                    </enabling>
                                    <set-value on="qrCodeSetting">
                                        if (typeof(qrCodeSetting) != 'undefined' &amp;&amp; qrCodeSetting != null &amp;&amp;
                                        qrCodeSetting.id == 1){
                                        var result = new Object();
                                        result.id = 1;
                                        result.name = 1;
                                        return result;
                                        }
                                    </set-value>
                                </dependencies>
                            </select>
                        </col>
                    </row>
                    <select id="qrCodeSetting" label="QR setting">
                        <options>
                            <option id="1" name="По умолчанию"/>
                            <option id="2" name="Пользовательская настройка"/>
                        </options>
                    </select>
                    <select id="varType1" label="Type1" visible="false">
                        <dependencies>
                            <visibility on="charactersNumber, qrCodeSetting">
                                return (typeof(charactersNumber) != 'undefined' &amp;&amp; charactersNumber != null
                                &amp;&amp; charactersNumber.id >= 1
                                &amp;&amp; typeof(qrCodeSetting) != 'undefined' &amp;&amp; qrCodeSetting != null)

                            </visibility>
                            <requiring on="charactersNumber">
                                return (typeof(charactersNumber) != 'undefined' &amp;&amp; charactersNumber != null
                                &amp;&amp;
                                charactersNumber.id >= 1)
                            </requiring>
                            <enabling on="qrCodeSetting">
                                return !(typeof(qrCodeSetting) != 'undefined' &amp;&amp; qrCodeSetting != null &amp;&amp;
                                qrCodeSetting.id == 1)
                            </enabling>
                            <set-value on="qrCodeSetting">
                                if (typeof(qrCodeSetting) != 'undefined' &amp;&amp; qrCodeSetting != null &amp;&amp;
                                qrCodeSetting.id == 1){
                                var result = new Object();
                                result.id = 2;
                                result.name = "Result";
                                return result;
                                } else {
                                return null;
                                }
                            </set-value>
                        </dependencies>
                    </select>
                    <select id="varType2" label="Type2">
                        <dependencies>
                            <requiring on="charactersNumber">
                                return (typeof(charactersNumber) != 'undefined' &amp;&amp; charactersNumber != null
                                &amp;&amp; charactersNumber.id >= 2)
                            </requiring>
                            <visibility on="charactersNumber,qrCodeSetting">
                                if (typeof(charactersNumber) != 'undefined' &amp;&amp; charactersNumber != null &amp;&amp;
                                charactersNumber.id >= 2
                                &amp;&amp; typeof(qrCodeSetting) != 'undefined' &amp;&amp; qrCodeSetting != null){
                                console.log("Тип переменных2 должен быть видимым");
                                return true;
                                } else {
                                console.log("Тип переменных2 должен быть спрятан");
                                return false;
                                }
                            </visibility>
                            <enabling on="qrCodeSetting">
                                return !(typeof(qrCodeSetting) != 'undefined' &amp;&amp; qrCodeSetting != null &amp;&amp;
                                qrCodeSetting.id == 2)
                            </enabling>
                        </dependencies>
                    </select>
                </fields>
            </form>
        </region>
    </regions>
</page>
