<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Название страницы" route="/pageRoute">
    <form>
        <fields>
            <input-money label="InputMoney" id="money" class="n2o" suffix=" rub" prefix="" thousands-separator=" "
                         decimal-separator=","/>

            <password label="InputPassword" id="password" class="n2o" length="15" placeholder="EnterPassword"/>

            <masked-input label="MaskedInput" id="masked" mask="+7 (999) 999-99-99" class="n2o"
                          placeholder="+7 (___) ___-__-__"/>

            <text-area label="TextArea" id="textArea" rows="6" class="n2o" placeholder="test"/>

            <file-upload label="FileUpload" id="fileUpload" class="custom-class" ajax="false"
                         upload-url="/n2o/data" delete-url="/n2o/data/delete" label-field-id="customName"
                         value-field-id="customId" message-field-id="customResponse" url-field-id="customLink"
                         request-param="avatar"/>

            <input-select-tree label="InputSelectTree" id="inputSelectTree" checkboxes="true" placeholder="SelectOption"
                               label-field-id="name" parent-field-id="parentCode" value-field-id="id">
                <options>
                    <option id="id1" name="one"/>
                    <option id="id2" name="two"/>
                    <option id="id3" name="three"/>
                    <option id="id4" name="four"/>
                </options>
            </input-select-tree>

        </fields>
    </form>
</simple-page>
