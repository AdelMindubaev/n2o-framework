<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0">
    <form query-id="test">
        <fields>
            <input-text id="id" enabled="false"/>
            <input-text id="name"/>
        </fields>
        <toolbar place="bottomLeft">
            <button label="Update">
                <invoke operation-id="update"/>
            </button>
            <button label="Close">
                <close refresh="true"/>
            </button>
        </toolbar>
        <pre-filters>
            <eq field-id="id" param="id"/>
        </pre-filters>
    </form>
</simple-page>
