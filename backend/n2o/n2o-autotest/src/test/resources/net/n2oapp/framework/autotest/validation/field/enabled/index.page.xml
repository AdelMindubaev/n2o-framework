<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
             name="Проверка условия выполнения валидации поля">
    <form object-id="test">
        <fields>
            <radio-group id="validation">
                <options>
                    <option id="1" name="on"/>
                    <option id="2" name="off"/>
                </options>
            </radio-group>
            <input-text id="input" label="message">
                <validations>
                    <mandatory id="notEmpty" enabled="{validation.id == 1}" on="validation"
                               message="Заполните поле" severity="danger">
                        input != null
                    </mandatory>
                </validations>
            </input-text>
        </fields>
        <toolbar place="bottomLeft">
            <button label="Send">
                <invoke operation-id="send"/>
            </button>
        </toolbar>
    </form>
</simple-page>