<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0">
    <form>
        <fields>
            <input-select id="select1" label="InputSelect1" reset-on-blur="false" status-field-id="status">
                <options>
                    <option id="one" name="One" status="success"/>
                    <option id="two" name="Two" status="primary"/>
                    <option id="three" name="Three" status="danger"/>
                </options>
            </input-select>
            <input-select id="select2" label="InputSelect2" type="multi">
                <options>
                    <option id="one" name="One"/>
                    <option id="two" name="Two"/>
                    <option id="three" name="Three"/>
                </options>
            </input-select>
            <input-select id="select3" label="InputSelect3" type="checkboxes">
                <options>
                    <option id="one" name="One"/>
                    <option id="two" name="Two"/>
                    <option id="three" name="Three"/>
                </options>
            </input-select>
        </fields>
    </form>
</simple-page>