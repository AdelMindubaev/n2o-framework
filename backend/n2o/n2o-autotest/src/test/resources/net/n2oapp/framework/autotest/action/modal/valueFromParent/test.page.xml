<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
             name="Модальное окно">
    <form>
        <fields>
            <input-text id="name" ref-page="parent" ref-field-id="name"/>
            <input-text id="name2" ref-page="parent" default-value="{name}"/>

            <input-select id="address" ref-page="parent" query-id="test">
                <default-value id="{address.id}" name="{address.name}"/>
            </input-select>

            <input-select type="multi" id="addresses" ref-page="parent" ref-field-id="addresses" query-id="test"/>
        </fields>
    </form>
</simple-page>