<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">
    <list>
        <test file="/net/n2oapp/framework/autotest/widget/calendar/test.json"/>
    </list>
    <unique>
        <test file="/net/n2oapp/framework/autotest/widget/calendar/test.json" operation="findOne"/>
    </unique>

    <fields>
        <field id="id">
            <select/>
            <filters>
                <eq filter-id="id"/>
            </filters>
        </field>
        <field id="title">
            <select/>
        </field>
        <field id="start" domain="date">
            <select/>
        </field>
        <field id="end" domain="date">
            <select/>
        </field>
        <field id="date.begin" domain="date">
            <select mapping="[start]"/>
        </field>
        <field id="date.end" domain="date">
            <select mapping="[end]"/>
        </field>
        <field id="tooltip" domain="boolean">
            <select/>
        </field>
        <field id="allDay" domain="boolean">
            <select/>
        </field>
        <field id="color">
            <select/>
        </field>
        <field id="disabled" domain="boolean">
            <select/>
        </field>
        <field id="resourceId" domain="object[]">
            <select/>
        </field>
    </fields>
</query>
