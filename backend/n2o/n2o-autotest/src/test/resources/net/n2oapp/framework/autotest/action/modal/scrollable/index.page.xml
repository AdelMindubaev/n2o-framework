<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
             name="Модальное окно с фиксированной высотой">
    <form>
        <toolbar>
            <button label="Открыть со скроллом" model="filter">
                <show-modal page-id="test" scrollable="true" route="/:id/modal">
                    <path-param name="id" value="{id}"/>
                </show-modal>
            </button>
            <button label="Открыть без скролла" model="filter">
                <show-modal page-id="test" route="/:id/modal">
                    <path-param name="id" value="{id}"/>
                </show-modal>
            </button>
        </toolbar>
    </form>
</simple-page>