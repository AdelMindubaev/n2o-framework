<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">
    <list>
        <test file="net/n2oapp/framework/autotest/widget/master_detail/detail.json"/>
    </list>

    <fields>
        <field id="id" domain="integer">
            <select/>
            <filters>
                <eq filter-id="id"/>
            </filters>
        </field>
        <field id="type">
            <select/>
            <filters>
                <eq filter-id="type"/>
            </filters>
        </field>
        <field id="surname">
            <select/>
            <filters>
                <eq filter-id="surname.name"/>
            </filters>
        </field>
    </fields>
</query>