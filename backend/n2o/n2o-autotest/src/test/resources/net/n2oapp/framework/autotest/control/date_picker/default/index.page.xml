<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0">
    <form>
        <fields>
            <row>
                <date-time id="now" label="Сейчас" time-format="HH:mm:ss" default-value="{$.now()}"/>
                <date-time id="today" label="Сегодня" default-value="{$.today()}"/>
            </row>
            <row>
                <date-time id="yesterday" label="Вчера" default-value="{$.yesterday()}"/>
                <date-time id="tomorrow" label="Завтра" default-value="{$.tomorrow()}"/>
            </row>
            <row>
                <date-time id="beginWeek" label="Начало недели" default-value="{$.beginWeek()}"/>
                <date-time id="endWeek" label="Конец недели" default-value="{$.endWeek()}"/>
            </row>
            <row>
                <date-time id="beginMonth" label="Начало месяца" default-value="{$.beginMonth()}"/>
                <date-time id="endMonth" label="Конец месяца" default-value="{$.endMonth()}"/>
            </row>
            <row>
                <date-time id="beginYear" label="Начало года" default-value="{$.beginYear()}"/>
                <date-time id="endYear" label="Конец года" default-value="{$.endYear()}"/>
            </row>
        </fields>
    </form>
</simple-page>
