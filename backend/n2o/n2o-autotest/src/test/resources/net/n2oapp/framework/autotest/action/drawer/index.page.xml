<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
             name="drawer-tests">
    <table query-id="test">
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="name"/>
        </columns>
        <toolbar>
            <button label="openLeft">
                <open-drawer page-id="drawer" detail-field-id="id" placement="left" width="500" height="500"/>
            </button>
            <button label="openTop">
                <open-drawer page-id="drawer" detail-field-id="id" placement="top" width="300" height="300"/>
            </button>
            <button label="openRight">
                <open-drawer page-id="drawer" detail-field-id="id" placement="right" backdrop="false"/>
            </button>
            <button label="openBottom">
                <open-drawer page-id="drawer" detail-field-id="id" placement="bottom" closable="false"/>
            </button>
        </toolbar>
    </table>
</simple-page>
