<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">
    <list>
        <sql>
            select :select
            from testStandardPageDependency
            where :filters
            order by :order
        </sql>
    </list>
    <count>
        select count(id)
        from testStandardPageDependency
        where :filters
    </count>

    <fields>
        <field id="id" domain="integer">
            <select/>
            <sorting/>
            <filters>
                <eq filter-id="id"/>
            </filters>
        </field>
        <field id="parent.id" domain="integer">
            <select/>
            <sorting param="sorting_parent_id"/>
            <filters >
                <eq filter-id="parent.id"/>
            </filters>
        </field>
        <field id="name" domain="string">
            <select/>
            <filters>
                <eq filter-id="name"/>
            </filters>
        </field>
        <field id="gender.id">
            <filters>
                <in filter-id="genders*.id"/>
            </filters>
        </field>
    </fields>
</query>
