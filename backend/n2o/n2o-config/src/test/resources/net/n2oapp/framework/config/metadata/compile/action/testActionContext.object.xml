<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-4.0">
    <operations>
        <operation id="create">
            <invocation>
                <java method="test"/>
            </invocation>
            <in>
                <field id="id"/>
                <field id="name" param="fpName1"/>
                <field id="gender.id" param="fpGender.id"/>
                <field id="surname"/>
                <field id="birthdate" required="true"/>
            </in>
        </operation>
    </operations>

    <validations>
        <condition id="conditionName" severity="danger" message="Test conditionName">
            name === 'name'
        </condition>
        <constraint id="constraintSurname" severity="danger"
                    result="[0][0][0] != null" message="Test constraintSurname">
            <invocation>
                <java method="test"/>
            </invocation>
            <in>
                <field id="surname"/>
            </in>
        </constraint>
    </validations>
</object>
