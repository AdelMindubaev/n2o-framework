<?xml version='1.0' encoding='UTF-8'?>
<menu xmlns="http://n2oapp.net/framework/config/schema/menu-3.0">
    <menu-item id="notif"
               name="Уведомления"
               icon="fa fa-bell"
               badge="2"
               badge-color="warning">
        <open-page page-id="index"
                   src="src"
                   close-after-submit="true"
                   focus-after-submit="true"
                   object-id="blankObject"
                   page-name="page"
                   redirect-target-after-submit="application"
                   redirect-url-after-submit="/url"
                   submit-label="submitLabel"
                   submit-model="edit"
                   submit-operation-id="operationId"
                   upload="query"
                   route="/login"/>
    </menu-item>
    <dropdown-menu id="user"
                   name="Виктория"
                   image="/static/users/vika91.png"
                   image-shape="circle">
        <menu-item name="Профиль"
                   icon="fa fa-user">
            <a href="/profile" target="application" src="src"/>
        </menu-item>
        <divider/>
        <menu-item name="Сообщения"
                   icon="fa fa-discussion"
                   badge="58"
                   badge-color="primary">
            <open-page page-id="index" route="/:id/route">
                <path-param name="id" value="{id}" ref-model="edit" ref-widget-id="widget"/>
                <query-param name="name" value="{name}"/>
            </open-page>
        </menu-item>
        <divider/>
        <menu-item name="Выход"
                   icon="fa fa-door">
            <a href="/logout" target="self">
                <path-param name="id" value="{id}" ref-model="edit" ref-widget-id="widget"/>
                <query-param name="name" value="{name}"/>
            </a>
        </menu-item>
    </dropdown-menu>
</menu>
