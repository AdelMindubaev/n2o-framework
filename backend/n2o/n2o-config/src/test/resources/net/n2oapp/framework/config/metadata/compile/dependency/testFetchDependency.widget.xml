<form xmlns="http://n2oapp.net/framework/config/schema/n2o-widget-4.0">
    <fields>
        <checkbox-group id="chb1">
            <pre-filters>
                <eq field-id="testFieldId1" value="{type}" />
            </pre-filters>
        </checkbox-group>

        <checkbox-group id="chb2">
            <pre-filters>
                <eq field-id="testFieldId2" value="{type}" />
            </pre-filters>
            <dependencies>
                <fetch on="testFieldId2"/>
            </dependencies>
        </checkbox-group>

        <checkbox-group id="chb3"/>

        <radio-group id="rg1">
            <pre-filters>
                <eq field-id="testFieldId3" value="{type}" />
            </pre-filters>
        </radio-group>

        <radio-group id="rg2">
            <pre-filters>
                <eq field-id="testFieldId4" value="{type}" />
            </pre-filters>
            <dependencies>
                <fetch on="testFieldId4"/>
            </dependencies>
        </radio-group>

        <radio-group id="rg3"/>
    </fields>
</form>
