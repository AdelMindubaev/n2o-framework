<?xml version='1.0' encoding='UTF-8'?>
<simple-page  xmlns="http://n2oapp.net/framework/config/schema/page-2.0" route="/page">
    <table query-id="testBindOpenPage" id="w1">
        <columns>
            <column text-field-id="id"/>
            <column text-field-id="name"/>
        </columns>
        <toolbar>
            <button id="open" label="Префильтрация данных на странице">
                <open-page page-id="testBindOpenPageShow" route="/show" upload="query">
                    <query-param name="name" value="{name}" />
                </open-page>
            </button>
        </toolbar>
    </table>
</simple-page>

