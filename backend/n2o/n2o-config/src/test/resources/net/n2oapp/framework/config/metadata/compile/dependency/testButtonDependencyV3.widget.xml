<table src="test" xmlns="http://n2oapp.net/framework/config/schema/n2o-widget-3.0">
    <object-id>testJsonForm</object-id>
    <action-menu>
        <menu-item id="filter" visible="true" label="Видимость" context="false">
            <description>
                Скроется, если имя в выбранной записи Афанасий
            </description>
            <event>
                <invoke-action action-id="testId"/>
            </event>
            <conditions>
                <visibility-condition>
                    <expression on="test">name !== 'Афанасий'</expression>
                </visibility-condition>
            </conditions>
        </menu-item>
        <menu-item id="enable" visible="true" label="Блокировка" context="false">
            <description>
                Заблокируется, если имя в выбранной записи Иннокентий
            </description>
            <event>
                <invoke-action action-id="testId"/>
            </event>
            <conditions>
                <enabling-condition>
                    <expression>name !== 'Иннокентий'</expression>
                </enabling-condition>
            </conditions>
        </menu-item>
        <menu-item id="combo" visible="true" label="Комбинация" context="false">
            <description>
                Заблокируется, если имя в выбранной записи Людмила. Исчезнет, если фамилия Ревин
            </description>
            <event>
                <invoke-action action-id="testId"/>
            </event>
            <conditions>
                <visibility-condition>
                    <expression>
                        surname !== 'Ревин'
                    </expression>
                </visibility-condition>
                <enabling-condition>
                    <expression>name !== 'Людмила'</expression>
                </enabling-condition>
            </conditions>
        </menu-item>
        <sub-menu id="subMenu3" label="Видимость списка">
            <menu-item id="menuItem4" label="Элементы списка">
                <description>Исчезнет, если фамилия Ревин</description>
                <conditions>
                    <visibility-condition>
                        <expression>surname !== 'Ревин'</expression>
                    </visibility-condition>
                </conditions>
            </menu-item>
            <menu-item id="menuItem5" label="Элементы списка">
                <description>Исчезнет, если фамилия Ревин</description>
                <conditions>
                    <visibility-condition>
                        <expression>surname !== 'Ревин'</expression>
                    </visibility-condition>
                </conditions>
            </menu-item>
        </sub-menu>
    </action-menu>
</table>
