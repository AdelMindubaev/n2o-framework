<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0">
    <regions>
        <region>
            <form id="form">
                <fields>
                    <input-text id="id"/>
                </fields>
            </form>
        </region>
    </regions>
    <toolbar>
        <!-- с route -->
        <button id="routeWithoutParams">
            <open-page page-id="testOpenPageRoutePage" route="/update"/>
        </button>
        <button id="routeWithoutParamsWithFilterModel" model="filter">
            <open-page page-id="testOpenPageRoutePage" route="/update"/>
        </button>
        <button id="routeWithMasterParam">
            <open-page page-id="testOpenPageRoutePage" route="/update" master-param="id"/>
        </button>
        <button id="routeWithDetailFieldId" model="filter">
            <open-page page-id="testOpenPageRoutePage" route="/update" detail-field-id="id"/>
        </button>

        <!-- без route с master-param -->
        <button id="withoutRouteWithMasterParam">
            <open-page page-id="testOpenPageRoutePage" master-param="id"/>
        </button>
        <button id="withoutRouteWithMasterParamWithFilterModel" model="filter">
            <open-page page-id="testOpenPageRoutePage" master-param="id"/>
        </button>

        <!-- без route с detail-field-id -->
        <button id="withoutRouteWithDetailFieldId">
            <open-page page-id="testOpenPageRoutePage" detail-field-id="id"/>
        </button>
        <button id="withoutRouteWithDetailFieldIdWithFilterModel" model="filter">
            <open-page page-id="testOpenPageRoutePage" detail-field-id="id"/>
        </button>

        <!-- без route, detail-field-id, master-param -->
        <button id="withoutAll">
            <open-page page-id="testOpenPageRoutePage"/>
        </button>
        <button id="withoutAllWithFilterModel" model="filter">
            <open-page page-id="testOpenPageRoutePage"/>
        </button>
    </toolbar>
</page>
