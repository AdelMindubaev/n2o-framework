<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
      layout="LeftRightLayout">
    <regions>
        <panel place="left">
            <table id="master1" query-id="testStandardPageDependency"/>
            <table id="detail1" query-id="testStandardPageDependency" depends-on="master1" detail-field-id="parent.id">
                <pre-filters>
                    <eq field-id="name" value="test"/>
                    <in field-id="gender.id">
                        <value>1</value>
                        <value>2</value>
                    </in>
                </pre-filters>
            </table>
        </panel>
        <panel place="right">
            <table id="master2" query-id="testStandardPageDependency"/>
            <table id="detail2" query-id="testStandardPageDependency">
                <pre-filters>
                    <eq field-id="name" value="{name}" ref-model="filter" ref-widget-id="master2"/>
                    <in field-id="gender.id" values="{gender.id}" ref-model="filter" ref-widget-id="master2"/>
                </pre-filters>
            </table>
            <table id="detail3" query-id="testStandardPageDependency">
                <pre-filters>
                    <in field-id="gender.id" values="{gender*.id}" ref-model="filter" ref-widget-id="master2"/>
                </pre-filters>
            </table>
        </panel>
    </regions>
</page>
