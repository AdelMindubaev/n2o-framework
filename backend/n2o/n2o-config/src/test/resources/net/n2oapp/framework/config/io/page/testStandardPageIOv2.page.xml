<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
      name="Моя страница"
      object-id="object"
      route="test"
      src="StandardPage"
      modal-size="lg">
    <toolbar place="BottomRight" generate="submit, close">
       <button action-id="testId" validate="true" model="filter"/>
       <sub-menu>
           <menu-item action-id="miTestId" validate="true" />
       </sub-menu>
       <group>
           <button action-id="groupTestId"/>
           <sub-menu>
               <menu-item action-id="miTestId"/>
           </sub-menu>
       </group>
   </toolbar>
    <regions>
        <region place="single" src="NoneRegion">
            <table>
                <columns>
                    <column id="test1" text-field-id="test1"/>
                    <column id="test2" text-field-id="test2"/>
                </columns>
            </table>
        </region>
        <tabs place="single" src="TabsRegion">
            <table>
                <columns>
                    <column id="test1" text-field-id="test1"/>
                    <column id="test2" text-field-id="test2"/>
                </columns>
            </table>
        </tabs>
        <line place="single" src="LineRegion" collapsible="true">
            <table>
                <columns>
                    <column id="test1" text-field-id="test1"/>
                    <column id="test2" text-field-id="test2"/>
                </columns>
            </table>
        </line>
        <panel place="single" src="PanelRegion" collapsible="true" class="card-header" style="margin-left:10px;width:300px"  header="true">
            <table>
                <columns>
                    <column id="test1" text-field-id="test1"/>
                    <column id="test2" text-field-id="test2"/>
                </columns>
            </table>
        </panel>
    </regions>
    <actions>
        <action>
            <close src="test"/>
        </action>
    </actions>
</page>

