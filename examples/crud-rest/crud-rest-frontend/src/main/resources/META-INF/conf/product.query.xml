<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="product"
       name="Список товаров">

    <list count-mapping="[count]" result-mapping="[collection]">
        <rest filters-separator="&amp;">${n2o.backend.url}/products?{filters}&amp;page={page}</rest>
    </list>
    <unique>
        <rest>${n2o.backend.url}/products/{id}</rest>
    </unique>
    <count>
        <rest>${n2o.backend.url}/products/{id}</rest>
    </count>


<fields>

        <field id="id" domain="long">
            <select/>
            <filters>
                <eq filter-id="id">id={id}</eq>
            </filters>
        </field>

        <field id="name" domain="string">
            <select/>
            <sorting>sortingColumn=name&amp;sortingOrder=:direction</sorting>
            <filters>
                <eq filter-id="name"/>
            </filters>
        </field>

        <field id="price" domain="long">
            <select/>
            <sorting>sortingColumn=price&amp;sortingOrder=:direction</sorting>
            <filters>
                <more filter-id="minPrice">minPrice={minPrice}</more>
                <less filter-id="maxPrice">maxPrice={maxPrice}</less>
            </filters>
        </field>

        <field id="description" domain="string">
            <select/>
            <sorting>sortingColumn=description&amp;sortingOrder=:direction</sorting>
            <filters>
                <eq filter-id="description"/>
            </filters>
        </field>

        <field id="category.id" domain="long">
            <select/>
            <sorting/>
            <filters>
                <eq filter-id="category.id">categoryId={categoryId}</eq>
                <in filter-id="categories*.id" domain="long">categoryId={categories*.id}</in>
            </filters>
        </field>

        <field id="category.name" domain="string">
            <sorting>sortingColumn=category.name&amp;sortingOrder=:direction</sorting>
            <select/>
            <sorting/>
        </field>

    </fields>
</query>
