<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0">
    <form  query-id="product">
        <fields>
            <input-text id="name"/>
            <input-text id="price"/>
            <input-text id="description"/>
            <input-select id="category" label="Категория товара" type="single">
                <query query-id="category" value-field-id="id" label-field-id="name"/>
            </input-select>
            <input-select id="shops" label="Магазины" type="multi">
                <query query-id="shop" value-field-id="id" label-field-id="name"/>
            </input-select>
        </fields>
    </form>
</simple-page>
