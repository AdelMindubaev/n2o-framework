<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
             name="Доступность полей">
    <form object-id="utBlank" query-id="utBlank">
        <fields>
            <radio-group id="gender" label="Пол" description="Если нажать на пол 'Женский', то поле 'Девичья фамилия' станет доступным">
                <options>
                    <option id="1" name="Мужской"/>
                    <option id="2" name="Женский"/>
                </options>
            </radio-group>
            <input-text id="maiden" label="Девичья фамилия">
                <dependencies>
                    <enabling on="gender">gender.id==2</enabling>
                </dependencies>
            </input-text>
        </fields>
    </form>
</simple-page>