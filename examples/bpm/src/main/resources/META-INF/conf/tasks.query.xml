<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">

    <list>
        <java method="getTasks">
            <spring bean="bpmIntegration"/>
            <arguments>
                <argument class="net.n2oapp.criteria.api.Criteria" type="criteria"/>
            </arguments>
        </java>
    </list>

    <count>
        <java method="getTasksCount">
            <spring bean="bpmIntegration"/>
        </java>
    </count>

    <fields>
        <field id="id" domain="string">
            <filters>
                <eq filter-id="id" domain="string" mapping="[0]"/>
            </filters>
            <select/>
        </field>
        <field id="processName" domain="string">
            <select/>
        </field>
        <field id="name" domain="string">
            <select/>
        </field>
        <field id="taskDefinitionKey" domain="string">
            <select/>
        </field>
        <field id="position" domain="string">
            <select/>
        </field>
    </fields>
</query>