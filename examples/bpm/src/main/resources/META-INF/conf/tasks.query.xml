<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">

    <list>
        <camunda operation="findTasks" variables="position" />
    </list>

    <count>
        <camunda operation="countTasks"/>
    </count>

    <fields>
        <field id="id" domain="string">
            <filters>
                <eq filter-id="id" domain="string"/>
            </filters>
            <select/>
        </field>
        <field id="name" domain="string">
            <select/>
            <filters>
                <like filter-id="name">name</like>
            </filters>
        </field>
        <field id="taskDefinitionKey" domain="string">
            <select/>
        </field>
        <field id="position" domain="string">
            <select mapping="['variables']?.get('position')">position</select>
            <filters>
                <like filter-id="position">position</like>
            </filters>
        </field>
    </fields>
</query>