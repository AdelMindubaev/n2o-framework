{
  "name": "n2o-frontend",
  "private": true,
  "workspaces": [
    "n2o",
    "n2o-auth",
    "demo",
    "n2o-simple-project",
    "n2o-notifications"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:n2o": "lerna run --scope n2o build",
    "build:libs": "lerna run --scope n2o --scope n2o-auth --scope n2o-notifications --parallel build",
    "build:projects": "lerna run --scope n2o-demo-client --scope n2o-simple-project --parallel build",
    "build:storybook": "lerna run --scope n2o build-storybook",
    "changeVersion": "lerna publish --skip-git --skip-npm --yes",
    "clean": "lerna run clean && lerna clean",
    "compile:dist:watch": "lerna run --stream --scope n2o compile:dist:watch",
    "compile:es:watch": "lerna run --stream --scope n2o compile:es:watch",
    "compile:lib:watch": "lerna run --stream --scope n2o compile:lib:watch",
    "compile:watch": "concurrently --kill-others \"npm run compile:es:watch\" \"npm run compile:lib:watch\" \"npm run compile:dist:watch\"",
    "dev": "lerna run --scope n2o storybook",
    "docs": "lerna run --scope n2o esdoc && lerna run --scope n2o build-storybook",
    "esdoc:n2o": "lerna run --scope n2o esdoc",
    "eslint": "lerna run --scope n2o eslint",
    "eslint:generate": "lerna run --scope n2o eslint:generate",
    "prepare": "lerna bootstrap --no-ci",
    "prettier:n2o": "lerna run --scope n2o prettier",
    "release": "lerna publish --skip-git --yes",
    "start:demo": "lerna run --scope n2o-demo-client start",
    "start:notify": "lerna run --scope n2o-notifications start",
    "start:simple": "lerna run --scope n2o-simple-project start",
    "test": "lerna run test --parallel",
    "test:n2o": "lerna run --scope n2o test",
    "test:n2o:generate-output": "lerna run --scope n2o test:generate-output",
    "test:n2o:hook": "lerna run --scope n2o test:hook"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "cross-env": "^5.2.0",
    "express": "^4.15.3",
    "http-proxy-middleware": "^0.20.0",
    "husky": "^1.0.0-rc.13",
    "identity-obj-proxy": "^3.0.0",
    "lerna": "3.16.4",
    "lint-staged": "^7.2.2",
    "mocha": "^3.4.2",
    "node-sass": "^4.9.2",
    "npm-registry-client": "^8.6.0",
    "prettier": "1.16.4",
    "react-addons-test-utils": "15.4.2",
    "react-test-renderer": "^16.0.0",
    "rimraf": "^2.6.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "n2o/src/**/*.{js,jsx}": [
      "npm run prettier:n2o",
      "git add",
      "npm run test:n2o:hook"
    ]
  }
}
