{
  "Page_Form": {
    "src": "FormWidget",
    "dependency": {
    },
    "toolbar": {
      "topLeft": [
        {
        "buttons": [
            {
              "id": "update",
              "label": "Сохранить",
              "src": "PerformButton",
              "validate": true
            }
          ]
        }
      ]
    },
    "actions": {
      "update": {
        "src": "invoke",
        "options": {
          "modelLink": "models.resolve['Page_Form']",
          "confirm": true
        }
      }
    },
    "form": {
      "fetchOnInit": false,
      "filterDefaultValues": {
        "fetch": [
          {
            "bindLink": "models.resolve['Page_Table']"
          }
        ]
      },
      "validation": {
        "field1": [
          {
            "type": "condition",
            "expression": "(field1.length == 0)",
            "severity": "warning",
            "text": "Предупреждение"
          }
        ],
        "field2": [
          {
            "type": "condition",
            "expression": "(field2.length == 0)",
            "severity": "danger",
            "text": "Ошибка"
          }
        ],
        "field3": [
          {
            "type": "condition",
            "expression": "(field3.length == 0)",
            "severity": "success",
            "text": "Успешное действие"
          }
        ],
        "field4": [
          {
            "type": "required",
            "severity": "danger",
            "text": "Поле обязательное"
          }
        ],
        "field41": [
          {
            "type": "required",
            "severity": "danger",
            "text": "Поле обязательное по условию",
            "expression": "(field42 == '1')"
          }
        ],
        "field5": [
          {
            "type": "constraint",
            "validationKey": "validCheckSurname"
          }

        ],
        "field6": [
          {
            "type": "maxLength",
            "max": 5,
            "text": "Максимальная длина равна 5 символам",
            "severity": "warning"
          }
        ],
        "field7": [
          {
            "type": "minLength",
            "min": 5,
            "text": "Минимальная длина равна 5 символам",
            "severity": "warning"
          }
        ],
        "field8": [
          {
            "type": "integer",
            "text": "Введите целое число",
            "severity": "warning"
          }
        ],
        "field9": [
          {
            "type": "russian",
            "text": "Введите значения, используя кириллицу",
            "severity": "warning"
          }
        ],
        "field10": [
          {
            "type": "condition",
            "expression":"field10 === 'N2O'",
            "text": "значение должно быть равно N2O(js-expression)",
            "severity": "warning"
          }
        ],
        "field11": [
          {
            "type": "match",
            "text": "Значение быть равно N2O(match)",
            "field":"N2O",
            "severity": "warning"
          }
        ]
      },
      "fieldsets": [
        {
          "src": "StandardFieldset",
          "rows": [
            {
              "cols": [
                {
                  "size": 4,
                  "fields": [
                    {
                      "id": "field1",
                      "src": "StandardField",
                      "description": "Описание поля",

                      "label": "Предупреждение",
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                },
                {
                  "size": 4,
                  "fields": [
                    {
                      "id": "field2",
                      "src": "StandardField",
                      "label": "Ошибка",
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                },
                {
                  "size": 4,
                  "fields": [
                    {
                      "id": "field3",
                      "src": "StandardField",
                      "label": "Успешное действие",
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "cols": [
                {
                  "size": 4,
                  "fields": [
                    {
                      "id": "field4",
                      "src": "StandardField",
                      "label": "Обязательное поле",
                      "required": true,
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                },
                {
                  "size": 4,
                  "fields": [
                    {
                      "id": "field5",
                      "src": "StandardField",
                      "label": "AJAX",
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                },
                {
                  "size": 4,
                  "fields": [
                    {
                      "id": "field6",
                      "src": "StandardField",
                      "label": "Максимальная длина",
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "cols": [
                {
                  "size": 4,
                  "fields": [
                    {
                      "id": "field7",
                      "src": "StandardField",
                      "label": "Минимальная длина",
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                },
                {
                  "size": 4,
                  "fields": [
                    {
                      "id": "field8",
                      "src": "StandardField",
                      "label": "Целое число",
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                },
                {
                  "size": 4,
                  "fields": [
                    {
                      "id": "field9",
                      "src": "StandardField",
                      "label": "Русский язык",
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "cols": [
                {
                  "size": 4,
                  "fields": [
                    {
                      "id": "field10",
                      "src": "StandardField",
                      "label": "JS-condition",
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                },
                {
                  "size": 4,
                  "fields": [
                    {
                      "id": "field11",
                      "src": "StandardField",
                      "label": "Равно значению",
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "cols": [
                {
                  "size": 4,
                  "fields": [
                    {
                      "id": "field42",
                      "src": "StandardField",
                      "label": "Условие ( field42 == '1')",
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                },
                {
                  "size": 4,
                  "fields": [
                    {
                      "id": "field41",
                      "src": "StandardField",
                      "label": "Зависит от 'Условия'",
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  }
}