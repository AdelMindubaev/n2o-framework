{
  "id": "testSimplePageJson",
  "page": {
    "title": "Первая"
  },
  "routes": {
    "list": [
      {
        "path" : "/test",
        "exact": true
      },
      {
        "path" : "/test/wireframe",
        "exact": true
      },
      {
        "path" : "/test/wireframe/:wireframe_id",
        "exact": true
      }
    ]
  },
  "breadcrumb": [
    {
      "label": "Первая"
    }
  ],
  "widgets": {
    "Page_Form": {
      "src": "FormWidget",
      "name": "name",
      "toolbar": {
        "bottomLeft": [
          {
            "buttons": [
              {
                "id": "redirect",
                "actionId": "redirect",
                "title": "Открыть"
              }
            ]
          }
        ]
      },
      "actions": {
        "redirect": {
          "src": "link",
          "options": {
            "path": "/:input",
            "pathMapping": {
              "input": {
                "bindLink":  "models.resolve['Page_Form'].path"
              }
            },
            "queryMapping": {},
            "target": "application"
          }
        }
      },
      "form": {
        "fetchOnInit": false,
        "fieldsets": [
          {
            "src": "StandardFieldset",
            "rows": [
              {
                "cols": [
                  {
                    "fields": [
                      {
                        "src": "StandardField",
                        "id": "path",
                        "label": "Путь",
                        "required": true,
                        "control": {
                          "src": "InputText"
                        }
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  },
  "layout": {
    "src": "SingleLayout",
    "regions": {
      "single": [
        {
          "src": "NoneRegion",
          "items": [
            {
              "widgetId": "Page_Form"
            }
          ]
        }
      ]
    }
  }
}