{
  "Page_Form": {
    "src": "FormWidget",
    "dependency": {},
    "dataProvider": {
      "url": "n2o/data/test",
      "pathMapping": {},
      "queryMapping": {}
    },
    "form": {
      "fetchOnInit": false,
      "validation": {},
      "fieldsets": [
        {
          "src": "StandartFieldset",
          "rows": [
            {
              "cols": [
                {
                  "fields": [
                    {
                      "id": "fieldName",
                      "src": "StandardField",
                      "label": "Выберите действие",
                      "control": {
                        "src": "InputSelect",
                        "labelFieldId": "label",
                        "valueFieldId": "id",
                        "data": [
                          {
                            "id": 1,
                            "label": "Показать/разблокировать все fieldsets"
                          },
                          {
                            "id": 2,
                            "label": "Скрыть fieldset"
                          },
                          {
                            "id": 3,
                            "label": "Заблокировать fieldset"
                          },
                          {
                            "id": 4,
                            "label": "Скрыть вложенный fieldset"
                          },
                          {
                            "id": 5,
                            "label": "Заблокировать вложенный fieldset"
                          }
                        ]
                      }
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "src": "StandartFieldset",
          "visible": "`fieldName.id != 2`",
          "enabled": "`fieldName.id != 3`",
          "dependency": [
            {
              "type": "reRender",
              "on": [
                "fieldName"
              ]
            }
          ],
          "rows": [
            {
              "cols": [
                {
                  "fields": [
                    {
                      "id": "name",
                      "src": "StandardField",
                      "label": "Первое поле",
                      "control": {
                        "src": "InputText"
                      }
                    },
                    {
                      "id": "surname",
                      "src": "StandardField",
                      "label": "Второе поле",
                      "control": {
                        "src": "InputText"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "cols": [
                {
                  "fieldsets": [
                    {
                      "src": "StandartFieldset",
                      "visible": "`fieldName.id != 4`",
                      "enabled": "`fieldName.id != 5`",
                      "dependency": [
                        {
                          "type": "reRender",
                          "on": [
                            "fieldName"
                          ]
                        }
                      ],
                      "rows": [
                        {
                          "cols": [
                            {
                              "fields": [
                                {
                                  "id": "innerName",
                                  "src": "StandardField",
                                  "label": "Вложеное поле",
                                  "control": {
                                    "src": "InputText"
                                  }
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  }
}