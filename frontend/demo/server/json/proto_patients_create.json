{
  "id": "proto_patients_create",
  "widgets": {
    "proto_patients_create_main": {
      "src": "FormWidget",
      "actions": {},
      "form": {
        "fieldsets": [
          {
            "src": "StandardFieldset",
            "rows": [
              {
                "cols": [
                  {
                    "fields": [
                      {
                        "src": "StandardField",
                        "id": "surname",
                        "required": true,
                        "label": "Фамилия",
                        "dependency": [],
                        "control": {
                          "src": "InputText",
                          "id": "surname",
                          "placeholder": "Введите значение"
                        }
                      }
                    ]
                  },
                  {
                    "fields": [
                      {
                        "src": "StandardField",
                        "id": "name",
                        "required": true,
                        "label": "Имя",
                        "dependency": [],
                        "control": {
                          "src": "InputText",
                          "id": "name"
                        }
                      }
                    ]
                  },
                  {
                    "fields": [
                      {
                        "src": "StandardField",
                        "id": "patrName",
                        "label": "Отчество",
                        "dependency": [],
                        "control": {
                          "src": "InputText",
                          "id": "patrName"
                        }
                      }
                    ]
                  }
                ]
              },
              {
                "cols": [
                  {
                    "size": 5,
                    "fields": [
                      {
                        "src": "StandardField",
                        "id": "gender",
                        "required": true,
                        "label": "Пол",
                        "dependency": [],
                        "control": {
                          "src": "RadioGroup",
                          "id": "gender",
                          "valueFieldId": "id",
                          "labelFieldId": "name",
                          "hasSearch": false,
                          "size": 30,
                          "dataProvider": {
                            "url": "n2o/data/ProtoGender",
                            "queryMapping": {},
                            "quickSearchParam": "name"
                          },
                          "type": "n2o"
                        }
                      }
                    ]
                  },
                  {
                    "size": 5,
                    "fields": [
                      {
                        "src": "StandardField",
                        "id": "birthday",
                        "label": "Дата рождения",
                        "dependency": [],
                        "control": {
                          "src": "DatePicker",
                          "id": "birthday",
                          "dateFormat": "DD.MM.YYYY",
                          "outputFormat": "${n2o.format.date.client}"
                        }
                      }
                    ]
                  },
                  {
                    "fields": [
                      {
                        "src": "StandardField",
                        "id": "vip",
                        "dependency": [
                          {
                            "type": "setValue",
                            "on": [
                              "gender"
                            ],
                            "expression": "(function(){if (gender.id == 1 || gender.id == 2)\n                                return true;\n                            else\n                                return false;})()",
                            "applyOnInit": true
                          }
                        ],
                        "control": {
                          "src": "Checkbox",
                          "id": "vip",
                          "label": "VIP"
                        }
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ],
        "validation": {
          "gender": [
            {
              "severity": "danger",
              "validationKey": "gender",
              "text": "Поле обязательно для заполнения",
              "type": "required"
            }
          ],
          "surname": [
            {
              "severity": "danger",
              "validationKey": "surname",
              "text": "Поле обязательно для заполнения",
              "type": "required"
            }
          ],
          "name": [
            {
              "severity": "danger",
              "validationKey": "name",
              "text": "Поле обязательно для заполнения",
              "type": "required"
            }
          ]
        },
        "modelPrefix": "resolve",
        "fetchOnInit": false
      }
    }
  },
  "toolbar": {
    "bottomRight": [
      {
        "id": "bottomRight0",
        "buttons": [
          {
            "id": "submit",
            "actionId": "submit",
            "hint": "Сохранить",
            "conditions": {
              "enabled": [
                {
                  "expression": "!_.isEmpty(this)",
                  "modelLink": "models.resolve['proto_patients_create_main']"
                }
              ]
            },
            "validate": true,
            "validatedWidgetId": "proto_patients_create_main",
            "color": "primary",
            "title": "Сохранить"
          },
          {
            "id": "close",
            "actionId": "close",
            "hint": "Закрыть",
            "conditions": {},
            "title": "Закрыть"
          }
        ]
      }
    ]
  },
  "actions": {
    "submit": {
      "id": "submit",
      "src": "perform",
      "options": {
        "type": "n2o/actionImpl/START_INVOKE",
        "payload": {
          "widgetId": "proto_patients_create_main",
          "pageId": "proto_patients_create",
          "dataProvider": {
            "url": "n2o/data/proto/patients/create/submit",
            "pathMapping": {},
            "method": "POST"
          },
          "modelLink": "models.resolve['proto_patients_create_main']"
        },
        "meta": {
          "success": {
            "refresh": {
              "type": "widget",
              "options": {
                "widgetId": "proto_patients"
              }
            },
            "redirect": {
              "path": "/proto/patients/:id/update2",
              "pathMapping": {},
              "queryMapping": {},
              "target": "application"
            },
            "closeLastModal": true
          },
          "fail": {}
        }
      }
    },
    "close": {
      "id": "close",
      "src": "perform",
      "options": {
        "type": "n2o/modals/DESTROY",
        "meta": {
          "closeLastModal": true
        }
      }
    }
  },
  "models": {
    "resolve['proto_patients_create_main'].patrName": {
      "value": "Тест",
      "link": "models.resolve['proto_patients_create_main'].patrName"
    }
  },
  "layout": {
    "src": "SingleLayout",
    "regions": {
      "single": [
